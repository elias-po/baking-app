<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_gravity="center"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    card_view:cardCornerRadius="4dp"
    android:layout_marginTop="@dimen/step_card_margin_vertical"
    android:layout_marginBottom="@dimen/step_card_margin_vertical"
    android:layout_marginStart="@dimen/step_card_margin_tablet"
    android:layout_marginEnd="@dimen/step_card_margin_tablet"
    android:id="@+id/step_card">

    <TextView
        android:id="@+id/step_short_description"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="@dimen/step_short_description_text_size_tablet"
        android:layout_marginTop="@dimen/step_short_description_text_margin_vertical"
        android:layout_marginBottom="@dimen/step_short_description_text_margin_vertical"
        android:layout_marginStart="@dimen/card_text_margin_horizontal_tablet"
        android:layout_marginEnd="@dimen/card_text_margin_horizontal_tablet"
        android:text="TextView" />
</android.support.v7.widget.CardView>