<?xml version="1.0" encoding="utf-8"?>

<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/recipe_list_wrapper"
    tools:context=".RecipeListActivity"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

<android.support.v7.widget.RecyclerView
    android:id="@+id/rv_recipe_list"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:nestedScrollingEnabled="false"
        android:clipToPadding="false"
        android:paddingTop="@dimen/recipes_rv_padding_vertical"
        android:paddingBottom="@dimen/recipes_rv_padding_vertical">
</android.support.v7.widget.RecyclerView>

</LinearLayout>